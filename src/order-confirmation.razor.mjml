                <mj-column>
                    <mj-social icon-size="40px" mode="horizontal" border-radius="0" container-background-color="#FFFFFF" >
                        <!-- we can customise the icons with src attribute -->
                        <mj-social-element
                                name="facebook-noshare"
                                href="https://facebook.com/"
                                src="images/Facebook.png"
                                srcset="images/Facebook.png 40w, images/Facebook@2x.png 80w"
                                alt="Facebook"
                        > </mj-social-element>
                        <mj-social-element
                                name="x-noshare"
                                href="https://x.com/"
                                src="images/TwitterX.png"
                                srcset="images/TwitterX.png 40w, images/TwitterX@2x.png 80w"
                                alt="Twitter X"
                        > </mj-social-element>
                        <mj-social-element
                                name="instagram"
                                href="https://instagram.com/"
                                src="images/Instagram.png"
                                srcset="images/Instagram.png 40w, images/Instagram@2x.png 80w"
                                alt="Instagram"
                        > </mj-social-element>
                        <mj-social-element
                                name="youtube"
                                href="https://youtube.com/"
                                src="images/YouTube.png"
                                srcset="images/YouTube.png 40w, images/YouTube@2x.png 80w"
                                alt="YouTube"> </mj-social-element>
                    </mj-social>
                </mj-column>
            </mj-section>

            <mj-section>
                <mj-column>
                    <mj-text align="center" font-size="18px" font-weight="400">
                        <ul style="list-style:none;padding:0">
                            <li style="margin:8px 0;"><a href="#" style="color:@bodyColor; text-decoration: none;"><img alt="" src="images/icons/Phone.png" width="21" height="21" srcset="images/icons/Phone.png 21w, images/icons/Phone@2x.png 42w" style="display:inline-block;margin-right:4px;vertical-align:middle;background-color:@bodyColor;" />  +44(0)123 123 1234</a></li>
                            <li style="margin:8px 0;"><a href="#" style="color:@bodyColor; text-decoration: none;"><img alt="" src="images/icons/Email.png" width="21" height="21" srcset="images/icons/Email.png 21w, images/icons/Email@2x.png 42w" style="display:inline-block;margin-right:4px;vertical-align:middle;background-color:@bodyColor;" />  test@demo.com</a></li>
                        </ul>
